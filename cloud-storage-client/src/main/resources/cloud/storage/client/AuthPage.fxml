<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="cloud.storage.client.controller.AuthController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label fx:id="textNotification"/>
  <TextField fx:id="usernameField" promptText="Введите имя пользователя"/>
  <TextField fx:id="passwordField" promptText="Введите пароль"/>

  <Button text="Зарегистрироваться!" onAction="#register"/>
  <Button text="Войти" onAction="#login"/>
</VBox>
